<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SystemSetting">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/settingbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="系统设置" />

    <Button
        android:id="@+id/button"
        android:layout_width="132dp"
        android:layout_height="120dp"
        android:layout_marginStart="150dp"
        android:background="@drawable/signalstyle_artist"
        android:onClick="cfsetting"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settingbar" />

    <Button
        android:id="@+id/button2"
        android:layout_width="132dp"
        android:layout_height="120dp"
        android:layout_marginStart="32dp"
        android:background="@drawable/farmingtool_artist"
        android:onClick="NJsetting"
        app:layout_constraintStart_toEndOf="@+id/button"
        app:layout_constraintTop_toTopOf="@+id/button" />

    <Button
        android:id="@+id/button4"
        android:layout_width="132dp"
        android:layout_height="120dp"
        android:layout_marginStart="32dp"
        android:background="@drawable/cleanup_artist"
        android:onClick="deleteAll"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button2"
        app:layout_constraintTop_toBottomOf="@+id/settingbar" />

    <Button
        android:id="@+id/button5"
        android:layout_width="132dp"
        android:layout_height="120dp"
        android:layout_marginStart="32dp"
        android:background="@drawable/aboutself_artist"
        android:onClick="aboutself"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button4"
        app:layout_constraintTop_toBottomOf="@+id/settingbar" />

    <Button
        android:id="@+id/button6"
        android:layout_width="132dp"
        android:layout_height="120dp"
        android:layout_marginStart="32dp"
        android:background="@drawable/checking_artist"
        android:onClick="chuchang"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button5"
        app:layout_constraintTop_toBottomOf="@+id/settingbar" />

</androidx.constraintlayout.widget.ConstraintLayout>